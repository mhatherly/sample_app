<% provide(:title, @user.name)  %>
<div class="row">
	<aside class="span4">
		 <%=render 'shared/sidebar_common' , user: @user, profile_link: :false %>
	</aside>
	<div class="span8">
        <%= render 'follow_form' if signed_in? %>
		<% if @user.microposts.any? %>
			<h3>Microposts(<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				 <%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>


