<% provide(:title, @title)  %>
<div class="row">
	<aside class="span4">
        <%=render 'shared/sidebar_common' , user: @user, profile_link: :true %>
		<section>
         <div class="user_avatars">
            <% @users.each do |user| %>
              <%= link_to gravatar_for(user, size: 30), user %>
            <% end %>
          </div>
        </section>
      </aside>
      <div class="span8" >
        <h3><%= @title %></h3>
        <% if @users.any? %>
          <ul class="users">
            <%= render @users %>
          </ul>
          <%= will_paginate %>
         <% end %>
      
      </div>
</div>
